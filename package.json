{
  "name": "vega-tooltip",
  "version": "0.3.2",
  "description": "A tooltip plugin for vega-lite and vega visualizations.",
  "main": "build/vega-tooltip.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/vega/vega-tooltip.git"
  },
  "keywords": [
    "vega-lite",
    "vega",
    "tooltip"
  ],
  "author": "Interactive Data Lab",
  "collaborators": [
    "Zening Qu",
    "Sira Horradarn"
  ],
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/vega/vega-tooltip/issues"
  },
  "homepage": "https://github.com/vega/vega-tooltip#readme",
  "scripts": {
    "prebuild": "npm run data && mkdir -p build",
    "build": "browserify src/index.ts -t browserify-shim -p tsify -d -s vegaTooltip -o build/vega-tooltip.js",
    "postbuild": "uglifyjs build/vega-tooltip.js -cm > build/vega-tooltip.min.js && uglifycss src/vega-tooltip.css > build/vega-tooltip.min.css && cp src/vega-tooltip.css build/vega-tooltip.css",
    "watch": "watchify src/index.ts -v -p tsify -d -s vegaTooltip -o build/vega-tooltip.js",
    "data": "rsync -r node_modules/vega-datasets/data/* data",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "start": "npm run build && python -m SimpleHTTPServer",
    "deploy": "scripts/deploy.sh"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "browserify-shim": "^3.8.14",
    "d3": "^4.0.0",
    "d3-collection": "^1.0.2",
    "d3-selection": "^1.0.4",
    "tslint": "~4.5.1",
    "tslint-eslint-rules": "^3.5.1",
    "tsify": "^3.0.1",
    "typescript": "^2.2.2",
    "uglify-js": "^2.6.2",
    "uglifycss": "^0.0.27",
    "vega-datasets": "vega/vega-datasets#gh-pages",
    "vega-embed": "^3.0.0-beta.0",
    "watchify": "^3.9.0",
    "@types/d3": "^4.5.0",
    "@types/node": "^7.0.18"
  },
  "dependencies": {
    "d3-format": "^1.2.0",
    "d3-time-format": "^2.0.5",
    "vega": "^3.0.0-beta.30",
    "vega-lite": "^2.0.0-beta.2"
  },
  "browserify-shim": {
    "vega": "global:vega",
    "vega-lite": "global:vl"
  }
}
